<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CheckModifyDeleteActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!-- Título de la actividad -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/DataRelatedFilmSeen"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:gravity="center">
            <ImageView
                android:id="@+id/imageFilm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </ImageView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/titleFilm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/idFilm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:gravity="center"
                android:visibility="gone"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_rectangle_white"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/InsertDataRelatedDateFilmSeen"
                    android:layout_marginStart="5sp"
                    android:layout_marginEnd="5sp"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:gravity="start"/>
            </LinearLayout>
            <!-- Campo de introducción del idioma en el que se vió -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/languageSeenFilm"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:gravity="start"/>
                <EditText
                    android:id="@+id/languageSeenFilm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="5sp"
                    android:paddingEnd="5sp"
                    android:textSize="22sp"
                    android:background="@drawable/rounded_rectangle_white"
                    android:textColor="@color/black"
                    android:gravity="start"
                    android:inputType="text" />
            </LinearLayout>
            <!-- Campo de introducción de la fecha en la que se vió -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/dateSeenFilm"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:gravity="start"/>
                <EditText
                    android:id="@+id/dateSeenFilm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="5sp"
                    android:paddingEnd="5sp"
                    android:textSize="22sp"
                    android:background="@drawable/rounded_rectangle_white"
                    android:textColor="@color/black"
                    android:gravity="start"
                    android:focusableInTouchMode="false"
                    android:inputType="date"/>
            </LinearLayout>
            <!-- Campo de introducción de la ciudad en la que se vió -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/citySeenFilm"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:gravity="start"/>
                <EditText
                    android:id="@+id/citySeenFilm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="5sp"
                    android:paddingEnd="5sp"
                    android:textSize="22sp"
                    android:background="@drawable/rounded_rectangle_white"
                    android:textColor="@color/black"
                    android:gravity="start"
                    android:inputType="text" />
            </LinearLayout>
            <!-- Campo de introducción del país en el que se vió -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/countrySeenFilm"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:gravity="start"/>
                <EditText
                    android:id="@+id/countrySeenFilm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="5sp"
                    android:paddingEnd="5sp"
                    android:textSize="22sp"
                    android:background="@drawable/rounded_rectangle_white"
                    android:textColor="@color/black"
                    android:gravity="start"
                    android:inputType="text" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:orientation="horizontal">
            <!-- Botón de modificar datos -->
            <Button
                android:id="@+id/modifyDataFilmButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5sp"
                android:paddingTop="5dp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:paddingBottom="5dp"
                android:textSize="20sp"
                android:textAllCaps="false"
                android:text="@string/ModifyDataFilm"
                android:background="@drawable/rounded_rectangle_blue"
                android:gravity="center"
                android:layout_weight="1">
            </Button>
            <!-- Botón de eliminación de datos de película -->
            <Button
                android:id="@+id/deleteDataFilmButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5sp"
                android:paddingTop="5dp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:paddingBottom="5dp"
                android:textSize="20sp"
                android:textAllCaps="false"
                android:text="@string/DeleteDataFilm"
                android:background="@drawable/rounded_rectangle_gray"
                android:gravity="center"
                android:layout_weight="1">
            </Button>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_rectangle_white"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/SpecificDataFilmSeen"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:gravity="start"/>
            </LinearLayout>
            <!-- Campo en el que se ve la fecha en la que publicó -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/YearFilm"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:gravity="start"/>
                <EditText
                    android:id="@+id/yearProductionFilm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="5sp"
                    android:paddingEnd="5sp"
                    android:textSize="22sp"
                    android:background="@drawable/rounded_rectangle_white"
                    android:textColor="@color/black"
                    android:gravity="start"
                    android:inputType="text"
                    android:enabled="false"/>
            </LinearLayout>
            <!-- Campo en el que se ve la duración de la película -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/DurationFilm"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:gravity="start"/>
                <EditText
                    android:id="@+id/durationFilm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="5sp"
                    android:paddingEnd="5sp"
                    android:textSize="22sp"
                    android:background="@drawable/rounded_rectangle_white"
                    android:textColor="@color/black"
                    android:gravity="start"
                    android:inputType="text"
                    android:enabled="false"/>
            </LinearLayout>
            <!-- Campo en el que se ve los géneros de la película -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/GenresFilm"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:gravity="start"/>
                <EditText
                    android:id="@+id/genreFilm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="5sp"
                    android:paddingEnd="5sp"
                    android:textSize="22sp"
                    android:background="@drawable/rounded_rectangle_white"
                    android:textColor="@color/black"
                    android:gravity="start"
                    android:inputType="text"
                    android:enabled="false"/>
            </LinearLayout>
            <!-- Campo en el que aparece la lista de actores de la película -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:visibility="gone">
                <EditText
                    android:id="@+id/listActorsFilm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="5sp"
                    android:paddingEnd="5sp"
                    android:textSize="22sp"
                    android:background="@drawable/rounded_rectangle_white"
                    android:textColor="@color/black"
                    android:gravity="start"
                    android:inputType="text"
                    android:enabled="false"/>
            </LinearLayout>
            <!-- Campo en el que se ve el actor principal de la película -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/MainActorFilm"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:gravity="start"/>
                <EditText
                    android:id="@+id/actorFilm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="5sp"
                    android:paddingEnd="5sp"
                    android:textSize="22sp"
                    android:background="@drawable/rounded_rectangle_white"
                    android:textColor="@color/black"
                    android:gravity="start"
                    android:inputType="text"
                    android:enabled="false"/>
            </LinearLayout>
            <!-- Campo en el que se ve la lista del resto de actores de la película -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/OtherActorsFilm"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:gravity="start"/>
                <EditText
                    android:id="@+id/actorsFilm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="5sp"
                    android:paddingEnd="5sp"
                    android:textSize="22sp"
                    android:background="@drawable/rounded_rectangle_white"
                    android:textColor="@color/black"
                    android:gravity="start"
                    android:lines="5"
                    android:minLines="1"
                    android:maxLines="40"
                    android:inputType="textMultiLine"
                    android:enabled="false"/>
            </LinearLayout>
            <!-- Campo que muestra el director de la película -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/DirectorFilm"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:gravity="start"/>
                <EditText
                    android:id="@+id/directorFilm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="5sp"
                    android:paddingEnd="5sp"
                    android:textSize="22sp"
                    android:background="@drawable/rounded_rectangle_white"
                    android:textColor="@color/black"
                    android:gravity="start"
                    android:inputType="text"
                    android:enabled="false"/>
            </LinearLayout>
            <!-- Campo para introducir el país de origen de la película -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/countryMadeFilm"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:gravity="start"/>
                <EditText
                    android:id="@+id/countryFilm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="5sp"
                    android:paddingEnd="5sp"
                    android:textSize="22sp"
                    android:background="@drawable/rounded_rectangle_white"
                    android:textColor="@color/black"
                    android:gravity="start"
                    android:inputType="text"
                    android:enabled="false"/>
            </LinearLayout>
            <!-- Campo para introducir la lengua original de la película -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/originalLanguageFilm"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:gravity="start"/>
                <EditText
                    android:id="@+id/originalLanguageFilm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="5sp"
                    android:paddingEnd="5sp"
                    android:textSize="22sp"
                    android:background="@drawable/rounded_rectangle_white"
                    android:textColor="@color/black"
                    android:gravity="start"
                    android:inputType="text"
                    android:enabled="false"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>